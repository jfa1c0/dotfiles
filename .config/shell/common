# vim: set ft=sh sw=2 et :

# make less more friendly for non-text input files, see lesspipe(1)
command -v lesspipe.sh >/dev/null 2>&1 && eval "$(SHELL=/bin/sh lesspipe.sh)"

# enable color support of ls and also add handy aliases
if command -v dircolors >/dev/null 2>&1; then
    test -r ~/.config/shell/dircolors && eval "$(dircolors -b ~/.config/shell/dircolors)" || eval "$(dircolors -b)"
fi

test -r ~/.config/shell/common.local && source ~/.config/shell/common.local
